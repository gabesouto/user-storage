generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// nome
// email
// senha
// role
// idade
// data de cadastro

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  fullName  String    @map("full_name")
  phoneNumber String  @map("phone_number")
  age       Int
  updatedAt DateTime  @map("updated_at")
  createdAt DateTime  @map("created_at")

  @@map("users")
}

model Staff {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  fullName  String    @map("full_name")
  age       Int
  role      String
  createdAt DateTime  @map("created_at")

  @@map("staff")
}


